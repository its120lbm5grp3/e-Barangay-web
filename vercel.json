{
  "version": 2,
  "builds": [
    { "src": "log-reg-page/**/*", "use": "@vercel/static" },
    { "src": "user-page/**/*", "use": "@vercel/static" },
    { "src": "admin-page/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "log-reg-page/login.html" },
    { "src": "^/login$", "dest": "log-reg-page/login.html" },
    { "src": "^/register$", "dest": "log-reg-page/register.html" },

    { "src": "^/user$", "dest": "user-page/index.html" },
    { "src": "^/user/(.*)$", "dest": "user-page/$1.html" },

    { "src": "^/admin$", "dest": "admin-page/dashboard.html" },
    { "src": "^/admin/(.*)$", "dest": "admin-page/$1.html" },

    { "src": "/(.*)", "dest": "log-reg-page/$1" }
  ]
}
